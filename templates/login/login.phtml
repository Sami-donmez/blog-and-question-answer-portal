    <script>
        function login() {
            var email=$("#email").val();
            var password=$("#pass").val();
            if (email!=""&&password!="") {
                var dataString = 'email=' + email + '&password=' + password;

                $.ajax({
                    type: "POST",
                    url: "<?=$url?>/login",
                    data: dataString,
                    cache: false,
                    success: function (result) {
                        if (result.success == "ok") {
                            var url = "<?=$url?>/" + result.link
                            alert("Giriş basarılı yönlendiriliyorsunuz");
                            window.location = url;
                        } else {
                            alert("Email veya şifreniz yanlış olabilir.Ltfen tekrar deneyiniz");
                        }
                    }
                });
            }else{
                alert("Boş alan bırakılamaz.")
            }
        }
        </script>
